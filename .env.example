# ==========================================
# AMIS OCR SYSTEM - ENVIRONMENT CONFIGURATION
# ==========================================
# Copy file này thành .env và điền các giá trị thực

# ==========================================
# APPLICATION SETTINGS
# ==========================================
APP_NAME=AMIS OCR System
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False

# ==========================================
# SERVER CONFIGURATION
# ==========================================
HOST=0.0.0.0
PORT=8000

# ==========================================
# OPENAI API (BẮT BUỘC)
# ==========================================
# Lấy API key tại: https://platform.openai.com/api-keys
# Hướng dẫn:
# 1. Đăng ký/Đăng nhập OpenAI Platform
# 2. Vào API Keys
# 3. Tạo API key mới
# 4. Copy và paste vào đây

OPENAI_API_KEY=your-openai-api-key-here

# Model settings
# Các model hỗ trợ vision: gpt-4o, gpt-4-turbo, gpt-4-vision-preview
# Khuyến nghị: gpt-4o (mới nhất, nhanh nhất, rẻ nhất)
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096

# ==========================================
# FILE STORAGE
# ==========================================
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
LOG_DIR=./logs

# File limits
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# ==========================================
# SECURITY
# ==========================================
# Thay đổi secret key này trong production
# Tạo secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production

# ==========================================
# CORS SETTINGS
# ==========================================
# Danh sách origins được phép (phân tách bởi dấu phẩy)
# Khi deploy lên Railway, thêm domain Railway vào đây
CORS_ORIGINS=*

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
