      .spinner {
        border: 4px solid rgba(226, 232, 240, 0.6);
        border-top: 4px solid var(--primary);
        border-right: 4px solid var(--secondary);
        border-radius: 50%;
        width: 60px;
        height: 60px;
        animation: spin 1s ease-in-out infinite;
        margin: 0 auto 20px;
      }

      .loading p {
        font-size: 1rem;
        font-weight: 600;
        color: var(--dark);
        animation: pulse 1.5s ease-in-out infinite;
      }

      /* Animations */
      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      @keyframes slideUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes slideDown {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

      @keyframes pulse {
        0%,
        100% {
          opacity: 1;
        }
        50% {
          opacity: 0.7;
        }
      }

      /* Responsive */
      @media (max-width: 1024px) {
        .input-grid {
