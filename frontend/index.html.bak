      async function saveAsJSON() {
        if (!currentJobId) return showAlert("Ch∆∞a c√≥ d·ªØ li·ªáu ƒë·ªÉ l∆∞u!", "error");

        try {
          showAlert("‚è≥ ƒêang t·∫°o file JSON...", "info");

          const response = await fetch(
            `/api/export/order/${currentJobId}/json`,
            {
              method: "POST",
            },
          );

          if (!response.ok) {
            throw new Error("L·ªói export JSON");
          }

          // Download JSON
          const blob = await response.blob();
          const url = window.URL.createObjectURL(blob);
          const link = document.createElement("a");
          link.href = url;
          link.download = `order_${currentJobId}.json`;
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);
          window.URL.revokeObjectURL(url);

          showAlert("‚úÖ ƒê√£ l∆∞u file JSON th√†nh c√¥ng!", "success");
        } catch (error) {
          console.error("Save JSON error:", error);
          showAlert("‚ùå L·ªói khi l∆∞u JSON: " + error.message, "error");
        }
      }

