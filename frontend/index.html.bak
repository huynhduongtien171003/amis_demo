        }
        .action-buttons {
          flex-direction: column;
          width: 100%;
        }
        .btn {
          width: 100%;
        }
        table {
          display: block;
          overflow-x: auto;
        }
      }

      /* Utility Classes */
      .text-muted {
        color: #6b7280;
        font-size: 0.9rem;
      }

      .text-primary {
        color: var(--primary);
      }

      .font-semibold {
        font-weight: 600;
      }
    </style>
