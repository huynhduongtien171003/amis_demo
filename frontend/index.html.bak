      function handleFileSelect(e) {
        const file = e.target.files[0];
        if (!file) return;

        if (file.size > 10 * 1024 * 1024) {
          showAlert("‚ùå File qu√° l·ªõn! Vui l√≤ng ch·ªçn file d∆∞·ªõi 10MB", "error");
          return;
